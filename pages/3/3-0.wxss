.container {
  padding: 20rpx;
  font-family: Arial, sans-serif;
  background-color: #f9f9f9;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

/* 描述样式 */
.description {
  font-size: 32rpx;
  color: #333;
  text-align: justify;
  margin-bottom: 30rpx;
}

/* 图片容器 */
.image-container {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

